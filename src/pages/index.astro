---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="act">
  <main>
    <div class="grainy-gradient flex items-center justify-center">
      <h1 class="text-white text-8xl font-bold glow">act</h1>
    </div>
  </main>
</Layout>

<style>
  html,
  body {
    margin: 0;
  }

  .grainy-gradient {
    height: 100vh;
    width: 100vw;
    background: radial-gradient(
      circle,
      hsla(324, 100%, 48%, 1) 18%,
      hsla(226, 89%, 57%, 1) 89%
    );
  }
  .glow {
    text-shadow: 1px 1px 15px #fff;
  }
</style>
